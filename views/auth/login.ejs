<%- include('../partials/head') %>
<link rel="stylesheet" href="/output.css" />
</head> 
<body class="bg-gray-100 min-h-screen flex flex-col items-center">
  <%- include('../partials/nav') %>

  <h1 class="text-3xl font-semibold text-gray-800 mt-8 mb-4">Login with your Info</h1>

  <main class="w-full max-w-md bg-white shadow-md rounded-lg p-6">
    <form action="/login" method="POST" class="flex flex-col gap-4">

      <%- include('../partials/errors') %>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email:</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Email"
          value="<%= oldInput.email %>"
          required
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password:</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter your password"
          required
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <input 
        type="submit" 
        value="Sign In" 
        class="mt-4 bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition cursor-pointer"
      />
    </form>
  </main>
</body>
</html>