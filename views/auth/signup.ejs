<%- include('../partials/head') %>
<link rel="stylesheet" href="/output.css" />
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center">
  <%- include('../partials/nav') %>

  <h1 class="text-3xl font-semibold text-gray-800 mt-8 mb-4">Register as a New User</h1>

  <main class="w-full max-w-xl bg-white shadow-md rounded-lg p-6">
    <form action="/signup" method="POST" class="flex flex-col gap-4">

      <%- include('../partials/errors') %>

      <div>
        <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name:</label>
        <input
          type="text"
          id="firstName"
          name="firstName"
          placeholder="First Name"
          value="<%= oldInput.firstName %>"
          required
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name:</label>
        <input
          type="text"
          id="lastName"
          name="lastName"
          placeholder="Last Name"
          value="<%= oldInput.lastName %>"
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email:</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Email"
          value="<%= oldInput.email %>"
          required
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password:</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter your password"
          required
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password:</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          placeholder="Confirm your password"
          required
          class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <p class="text-sm font-medium text-gray-700 mt-2">User Type:</p>
      <div class="flex items-center gap-6 mt-1">
        <label for="guest" class="flex items-center gap-2 cursor-pointer">
          <input
            type="radio"
            name="userType"
            value="guest"
            id="guest"
            <%= oldInput.userType === 'guest' ? 'checked' : '' %>
            class="cursor-pointer"
          />
          <span>Guest</span>
        </label>

        <label for="host" class="flex items-center gap-2 cursor-pointer">
          <input
            type="radio"
            name="userType"
            value="host"
            id="host"
            <%= oldInput.userType === 'host' ? 'checked' : '' %>
            class="cursor-pointer"
          />
          <span>Host</span>
        </label>
      </div>

      <div class="flex items-center gap-2 mt-2">
        <input
          type="checkbox"
          name="terms"
          id="terms"
          <%= termsAccepted ? 'checked' : '' %>
          class="cursor-pointer"
        />
        <label for="terms" class="text-sm cursor-pointer">I agree to the terms and conditions</label>
      </div>

      <input
        type="submit"
        value="Register"
        class="mt-4 bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition cursor-pointer"
      />
    </form>
  </main>
</body>
</html>
