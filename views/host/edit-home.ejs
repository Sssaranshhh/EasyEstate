<%- include('../partials/head') %>
<link rel="stylesheet" href="/output.css">
</head>
<body class="bg-gray-50 text-gray-800 min-h-screen flex flex-col">
  <%- include('../partials/nav') %>

  <h1 class="text-3xl font-semibold text-center mt-8 mb-4">
    <%= editing ? "Edit" : "Register" %> your Home here
  </h1>

  <main class="flex-grow flex justify-center items-start">
    <form
      action="/host/<%= editing ? 'edit-home/' : 'add-home' %>"
      method="POST"
      enctype="multipart/form-data"
      class="w-full max-w-2xl bg-white shadow-lg rounded-2xl p-8 space-y-6 border border-gray-200"
    >
      <input type="hidden" name="id" value="<%= editing ? home._id : '' %>">

      <div>
        <label for="homeName" class="block text-sm font-medium text-gray-700 mb-1">Name of the House</label>
        <input
          type="text"
          id="homeName"
          name="homeName"
          value="<%= editing ? home.homeName : '' %>"
          placeholder="Enter the name of your house"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="rentPerMonth" class="block text-sm font-medium text-gray-700 mb-1">Rent per month</label>
        <input
          type="text"
          id="rentPerMonth"
          name="rentPerMonth"
          value="<%= editing ? home.rentPerMonth : '' %>"
          placeholder="Enter the rent per month"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="location" class="block text-sm font-medium text-gray-700 mb-1">Address</label>
        <input
          type="text"
          id="location"
          name="location"
          value="<%= editing ? home.location : '' %>"
          placeholder="Enter the location"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="rating" class="block text-sm font-medium text-gray-700 mb-1">Rating out of 5</label>
        <input
          type="text"
          id="rating"
          name="rating"
          value="<%= editing ? home.rating : '' %>"
          placeholder="e.g. 4.5"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="houseImage" class="block text-sm font-medium text-gray-700 mb-1">Picture of the House</label>
        <input
          type="file"
          name="houseImage"
          id="houseImage"
          class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4
                 file:rounded-full file:border-0
                 file:text-sm file:font-semibold
                 file:bg-blue-50 file:text-blue-700
                 hover:file:bg-blue-100"
        />
      </div>

      <div>
        <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
        <textarea
          id="description"
          name="description"
          placeholder="Describe your home"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          rows="4"
        ><%= editing ? home.description : '' %></textarea>
      </div>

      <div class="text-center">
        <button
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-semibold transition duration-200"
        >
          <%= editing ? "Update Home" : "Add Home" %>
        </button>
      </div>
    </form>
  </main>
</body>
</html>
