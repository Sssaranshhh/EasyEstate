<div class="flex gap-3 mt-4">
  <form action="/favourite-list" method="POST">
    <input type="hidden" name="id" value="<%= home._id %>">
    <button
      type="submit"
      class="px-3 py-1 bg-pink-100 text-pink-600 rounded-full text-sm hover:bg-pink-200 transition"
      title="Add to favourites"
    >
      ❤️
    </button>
  </form>

  <form action="/bookings" method="POST">
    <input type="hidden" name="id" value="<%= home._id %>">
    <button
      type="submit"
      class="px-4 py-1 bg-blue-600 text-white rounded-md text-sm hover:bg-blue-700 transition"
    >
      Book
    </button>
  </form>
</div>
