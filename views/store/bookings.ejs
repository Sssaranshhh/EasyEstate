<%- include('../partials/head') %>
<link rel="stylesheet" href="/output.css" />
</head>
<body class="bg-gray-50 text-gray-800">
  <%- include('../partials/nav') %>

  <main class="px-6 py-10">
    <h1 class="text-3xl font-bold text-center mb-10">My Bookings</h1>

    <div class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      <% regHomes.forEach(home => { %>
        <li class="bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl hover:scale-105 transition transform duration-300 cursor-pointer list-none">
          <div class="h-48 overflow-hidden">
            <img src="/<%= home.houseImage %>" alt="<%= home.homeName %>" class="w-full h-full object-cover">
          </div>

          <div class="p-4">
            <h2 class="text-xl font-semibold mb-1"><%= home.homeName %></h2>
            <p class="text-gray-500 mb-2"><%= home.location %></p>

            <div class="flex justify-between text-sm text-gray-700 mb-4">
              <p class="font-medium">₹<%= home.rentPerMonth %>/month</p>
              <p class="font-medium"><%= home.rating %>/5 ⭐</p>
            </div>

            <div class="flex justify-between gap-2">
              <a href="/homes/<%= home._id %>" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-2 rounded-lg text-sm font-semibold transition">Details</a>
              <form action="/bookings/delete/<%= home._id %>" method="POST">
                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded-lg text-sm font-semibold transition">Remove</button>
              </form>
            </div>
          </div>
        </li>
      <% }) %>
    </div>
  </main>
</body>
</html>