<%- include('../partials/head') %>
<link rel="stylesheet" href="/output.css" />
</head>
<body class="bg-gray-50 text-gray-800">
  <%- include('../partials/nav') %>

  <main class="px-6 py-10 max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold text-center mb-10">Home Details</h1>

    <div class="flex flex-col md:flex-row gap-8 items-start bg-white shadow-lg rounded-2xl overflow-hidden p-6">
      <!-- Image Section -->
      <div class="w-full md:w-1/2">
        <img src="/<%= home.houseImage %>" alt="<%= home.homeName %>" class="w-full h-80 object-cover rounded-xl shadow-md">
      </div>

      <!-- Content Section -->
      <div class="w-full md:w-1/2 space-y-4">
        <!-- Header -->
        <div>
          <h2 class="text-2xl font-semibold"><%= home.homeName %></h2>
          <p class="text-gray-600">üìç <%= home.location %></p>
        </div>

        <!-- Price & Rating -->
        <div class="flex justify-between items-center text-gray-700">
          <div class="text-xl font-bold text-green-600">
            ‚Çπ<%= home.rentPerMonth %> <span class="text-sm font-medium text-gray-500">/month</span>
          </div>
          <div class="flex items-center gap-1 text-yellow-500 font-medium">
            <span class="text-lg">‚òÖ</span>
            <span><%= home.rating %></span>
            <span class="text-sm text-gray-500">out of 5</span>
          </div>
        </div>

        <!-- Description -->
        <p class="text-gray-700 leading-relaxed border-t pt-4"><%= home.description %></p>

        <!-- Favourite button (from partial) -->
        <%- include('../partials/favourite') %>
      </div>
    </div>
  </main>
</body>
</html>