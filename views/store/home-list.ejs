<%- include('../partials/head') %>
<link rel="stylesheet" href="/output.css" />
</head>
<body class="bg-gray-50 text-gray-800">
  <%- include('../partials/nav') %>

  <div class="max-w-7xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold text-center mb-10">Here are our Registered Homes:</h1>

    <ul class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% regHomes.forEach(home => { %>
        <li class="bg-white rounded-xl shadow-md overflow-hidden flex flex-col">
          <!-- Image -->
          <div class="w-full h-56 overflow-hidden">
            <img src="/<%= home.houseImage %>" alt="<%= home.homeName %>" class="w-full h-full object-cover hover:scale-105 transition-transform duration-300">
          </div>

          <!-- Text Section -->
          <div class="flex-1 p-4 space-y-2">
            <div class="flex justify-between items-center">
              <p class="text-lg font-semibold text-green-600">â‚¹<%= home.rentPerMonth %><span class="text-sm text-gray-500"> /month</span></p>
              <p class="text-yellow-500 font-medium"><%= home.rating %>/5</p>
            </div>
          </div>

          <!-- Buttons -->
          <div class="flex justify-between items-center px-4 pb-4 gap-2">
            <a href="/homes/<%= home._id %>" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 cursor-pointer transition duration-200">Details</a>
            <%- include('../partials/favourite', {home: home}) %>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>